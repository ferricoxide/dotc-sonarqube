{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Conditions": {},
  "Description": "Template for creating Security groups used to support SonarQube",
  "Mappings": {},
  "Outputs": {
    "AppSg": {
      "Description": "Application-access Security Group",
      "Value": {
        "Ref": "AppSg"
      }
    },
    "RdsSg": {
      "Description": "EC2-to-RDS Security Group",
      "Value": {
        "Ref": "RdsSg"
      }
    }
  },
  "Parameters": {
    "TargetVPC": {
      "AllowedPattern": "^vpc-[0-9a-f]*$",
      "Description": "ID of the VPC to deploy cluster nodes into.",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "AppSg": {
      "Properties": {
        "GroupDescription": "Application access-ports Security Group",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "FromPort": "9000",
            "IpProtocol": "tcp",
            "ToPort": "9000"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "FromPort": "80",
            "IpProtocol": "tcp",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "FromPort": "443",
            "IpProtocol": "tcp",
            "ToPort": "443"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "SonarQube application Security Group"
          }
        ],
        "VpcId": {
          "Ref": "TargetVPC"
        }
      },
      "Type": "AWS::EC2::SecurityGroup"
    },
    "RdsSg": {
      "Properties": {
        "GroupDescription": "EC2-to-RDS Security Group",
        "Tags": [
          {
            "Key": "Name",
            "Value": "SonarQube EC2/RDS Security Group"
          }
        ],
        "VpcId": {
          "Ref": "TargetVPC"
        }
      },
      "Type": "AWS::EC2::SecurityGroup"
    },
    "UpdateAppSg": {
      "DependsOn": "AppSg",
      "Properties": {
        "FromPort": "0",
        "GroupId": {
          "Ref": "AppSg"
        },
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Ref": "AppSg"
        },
        "ToPort": "65535"
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    },
    "UpdateRdsSg": {
      "DependsOn": "RdsSg",
      "Properties": {
        "FromPort": "5432",
        "GroupId": {
          "Ref": "RdsSg"
        },
        "IpProtocol": "tcp",
        "SourceSecurityGroupId": {
          "Ref": "RdsSg"
        },
        "ToPort": "5432"
      },
      "Type": "AWS::EC2::SecurityGroupIngress"
    }
  }
}
